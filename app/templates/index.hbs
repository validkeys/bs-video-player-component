<h1 class="current-time-logger">Current Time: {{cursor}}</h1>
<div class="video-backsplash">
  <div class="video-inner">
    {{video-player src=src width=width height=height startAt=startAt cursor=cursor responsive=true autoplay=false}}
  </div>
</div>

