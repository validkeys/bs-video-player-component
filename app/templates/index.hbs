{{!-- happen when you submit the form then click it again --}}
{{!-- that's because it's happening on the click action --}}
{{!-- so then add the on="submit" action--}}
<div class="new-comment-form">
  <form {{action "createComment" on="submit"}}>
    {{input type="text" name="newComment" value=newComment}}
    <button>Submit Comment</button>
  </form>
</div>

<div class="comments-container">
<h3>Comments</h3>
  <ul>
    {{#each comment in comments}}
    <li {{action "scrollTo" comment.time}}>
      <strong>{{comment.name}}</strong> - {{comment.comment}} - <small>@ {{comment.time}} secs</small>
    </li>
    {{/each}}
  </ul>
</div>